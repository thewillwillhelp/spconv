{
    "extends": [
        "eslint:recommended",
        "google",
        "plugin:react/recommended"
    ],
    "parser": "@babel/eslint-parser",
    "parserOptions": {
        "sourceType": "module",
        "babelOptions": {
            "configFile": "./build-configs/.babelrc.js"
        }
    },
    "env": {
        "es6": true,
        "browser": true
    },
    "rules": {
        "indent": [ "error", 4 ],
        "require-jsdoc": "off",
        "max-len": [ "error", 140 ]
    },
    "plugins": [ "import" ]
}